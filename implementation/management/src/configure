#!/bin/bash

pushd ../../.. > /dev/null
. ./make.env
popd > /dev/null

echo -n -e "\t\tWriting configure.h header..."
cat > configure.h << EOF
/******************************************************************************

Defines path to configuration directory

WARNING!!! This file is generated. Do not edit!

******************************************************************************/

#ifndef _CONFIGURE_H
#define _CONFIGURE_H

#define ETC_DIR "$ETC_DIR"

#endif
EOF
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK

echo -n -e "\t\tWriting dir_conf.h header..."
$M4 ../macros.m4 dir_conf.m4 > dir_conf.h
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK
