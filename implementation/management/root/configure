#!/bin/bash

cd ../../..
. ./make.env
cd implementation/management/root

echo -n -e "\t\tWriting db_connect.php..."
cat > db_connect.php << EOF
<?php
mysql_connect("$DATABASE_SERVER", "$DATABASE_USER", "$DATABASE_PASSWORD");
mysql_select_db("$DATABASE_NAME");
?>
EOF
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK
chmod o-rwx db_connect.php


echo -n -e "\t\tWriting config.php..."
cat > config.php << EOF
<?php
\$SERVER_ADDRESS = "$ADMIN_INTERFACE_PARSER_IP";
\$SERVER_PORT = "$ADMIN_INTERFACE_PARSER_PORT";
\$SERVER_DEFAULT_PORT = "$PARSER_DEFAULT_PORT";
\$scriptBase='$ADMIN_INTERFACE_SCRIPT_DIR';
?>
EOF
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK
chmod o-rwx db_connect.php
