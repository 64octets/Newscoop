#!/bin/bash

[ "$CAMPSITE_PACKAGE_DIR" = "" ] && cd ../.. && . ./configure --define_start_env && cd implementation/search
. ${INSTALL_CONF}/conf_functions

install_conf --set

[ -f configure.h ] && exit 0

echo -n -e "\tWriting configure.h header..."
cat > configure.h << EOF
/******************************************************************************

Defines used to connect to MySQL database server

WARNING!!! This file is generated. Do not edit!

******************************************************************************/

#ifndef _CONFIGURE_H
#define _CONFIGURE_H

#define ETC_DIR "$ETC_DIR"

#endif
EOF
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK

exit 0
