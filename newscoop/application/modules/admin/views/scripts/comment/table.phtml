    	that = datatableCallback;
        for(i in that.serverData) {
            if(that.serverData[i])
                aoData.push({"name": "sFilter[status][]", "value": i});
        }
    	$.getJSON( sSource, aoData, function (json) {
    		fnCallback(json);
    	});
    }
}
