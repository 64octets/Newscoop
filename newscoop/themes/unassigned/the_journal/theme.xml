<theme name="The Journal" designer="Sourcefabric o.p.s." version="1.0" require="3.4">
    <description>The Journal theme description</description>

    <presentation-img src="front.jpg" name="Front page"/>
	<presentation-img src="section.jpg" name="Section page"/>
	<presentation-img src="article.jpg" name="Article"/>

	<output name="Web">




	<frontPage src="front.tpl"/><sectionPage src="section.tpl"/><articlePage src="article.tpl"/><errorPage src="404.tpl"/></output>

	<!-- =============================== -->

	<article-type name="Blog">
		<field name="Title" type="singleline" length="255"/>
		<field name="Post" type="multiline"/>
	</article-type>

	<article-type name="Static">
		<field name="Title" type="singleline" length="255"/>
		<field name="Post" type="multiline"/>
	</article-type>

</theme>