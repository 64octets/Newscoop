#!/bin/sh -e

chmod 640 /var/www/campsite/conf >/dev/null 2>&1 || true
chmod 640 /var/www/campsite/install/cron_jobs >/dev/null 2>&1 || tru
chmod 640 /var/www/campsite/templates >/dev/null 2>&1 || true
chmod 640 /var/www/campsite/templates_c >/dev/null 2>&1 || true
chown www-data.www-data /var/www/campsite/conf >/dev/null 2>&1 || true
chown www-data.www-data /var/www/campsite/install/cron_jobs >/dev/null 2>&1 || true
chown www-data.www-data /var/www/campsite/templates >/dev/null 2>&1 || true
chown www-data.www-data /var/www/campsite/templates_c >/dev/null 2>&1 || true

exit 0
