{
    "name":"sourcefabric/newscoop",
    "description":"The open source CMS for news",
    "keywords":["cms,journalism,publication"],
    "homepage":"http://www.sourcefabric.org/en/newscoop/",
    "version":"4.0",
    "license":"GPL-3.0",
    "authors":[],
    "require":{
        "php": ">=5.3.0",
        "symfony/dependency-injection": "2.1.*",
        "symfony/event-dispatcher" : "2.1.*",
        "symfony/yaml": "2.1.*",
        "symfony/config": "2.1.*",
        "doctrine/orm":"2.1.*",
        "zendframework/zendframework1":"dev-release-1.11",
        "Smarty3":"3.0.8",
        "behat/behat":           ">=2.4.0",
        "behat/common-contexts": "*",
        "kriswallsmith/buzz":    ">=0.7"
    },
    "repositories":[
        {
            "type":"package",
            "package":{
                "name":"Smarty3",
                "version":"3.0.8",
                "dist":{
                    "url":"http://www.smarty.net/files/Smarty-3.0.8.zip",
                    "type":"zip"
                },
                "source":{
                    "url":"http://smarty-php.googlecode.com/svn/",
                    "type":"svn",
                    "reference":"tags/Smarty_3_0_8//distribution/"
                }
            }
        }
    ],
    "autoload":{
        "psr-0": {
            "Newscoop": "newscoop/library",
            "Resource": "newscoop/library",
            "Nette": "newscoop/library"
        },
        "classmap":[
            "vendor/Smarty3/libs", 
            "newscoop/classes",
            "dependencies/include/adodb",
            "newscoop/template_engine",
            "newscoop/plugins"
        ]
    },
    "minimum-stability":"dev",
    "config": { "bin-dir": "vendor/bin/" }
}
