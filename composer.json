{
    "name":"sourcefabric/newscoop",
    "description":"The open source CMS for news",
    "keywords":["cms,journalism,publication"],
    "homepage":"http://www.sourcefabric.org/en/newscoop/",
    "version":"4.0",
    "license":"GPL-3.0+",
    "authors":[],
    "require":{
        "php": ">=5.3.0",
        "zendframework/zendframework1":">=1.12",
        "Smarty3":"3.0.8",
        "symfony/dependency-injection":"2.0",
        "symfony/event-dispatcher":"2.0",
        "doctrine/orm":"2.1.*",
        "doctrine/mongodb-odm":"*"
    },
    "repositories":[
        {
            "type":"package",
            "package":{
                "name":"sfDependencyInjection",
                "version":"2.0",
                "source":{
                    "url":"https://github.com/fabpot/dependency-injection.git",
                    "type":"git",
                    "reference":"master"
                }
            }
        },
        {
            "type":"package",
            "package":{
                "name":"sfEventDispatcher",
                "version":"2.0",
                "source":{
                    "url":"https://github.com/fabpot/event-dispatcher.git",
                    "type":"git",
                    "reference":"master"
                }
            }
        },
        {
            "type":"package",
            "package":{
                "name":"Smarty3",
                "version":"3.0.8",
                "dist":{
                    "url":"http://www.smarty.net/files/Smarty-3.0.8.zip",
                    "type":"zip"
                },
                "source":{
                    "url":"http://smarty-php.googlecode.com/svn/",
                    "type":"svn",
                    "reference":"tags/Smarty_3_0_8//distribution/"
                }
            }
        }

    ],

    "autoload":{
        "classmap":["vendor/symfony/dependency-injection/lib", "vendor/symfony/event-dispatcher/lib", "vendor/Smarty3/libs"]
    },
    "minimum-stability":"dev"
}
