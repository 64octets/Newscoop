#!/bin/bash

bin_path=`dirname $0`
if [ "$bin_path" = "." ] || [ "$bin_path" = "" ]; then
	www_dir=`./campsite_config --www_dir`
	script_call="./autopublish.php"
else
	www_dir=`$bin_path/campsite_config --www_dir`
	script_call="$bin_path/autopublish.php"
fi


for inst_www_dir in $www_dir/*; do
	php $"$script_call" $"$inst_www_dir"
done
