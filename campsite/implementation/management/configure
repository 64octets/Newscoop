#!/bin/bash

cd ../..
. ./make.env
cd implementation/management

echo -n -e "\t\tWriting macros.m4..."
cat > macros.m4 << EOF
changecom\`'dnl
changequote(<*, *>)dnl
define(<*X_COPYRIGHT*>, <*<a STYLE='font-size:8pt;color:#000000' href='http://www.campware.org' target='campware'>CAMPSITE $CAMPSITE_VERSION &copy 1999-2004 MDLF, maintained and distributed under GNU GPL by CAMPWARE</a>*>)dnl
EOF
[ $? -ne 0 ] && echo "ERROR" && exit 1
cat "./macros.in" >> macros.m4
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK

cdirs=`find . -maxdepth 1 -type d -print | cut -f 2 -d "/"`
for dir in $cdirs; do
    if [ -x ${dir}/configure ] && [ "$dir" != "." ]; then
	echo -e "\tConfiguring implementation/management/$dir ..."
	cd $dir && ./configure
	result=$?
	cd ..
	[ $result -ne 0 ] && exit 1
    fi
done
