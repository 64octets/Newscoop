#!/bin/bash

cd ../..
. ./make.env
cd implementation/mailnotify

echo -n -e "\t\tWriting configure.h header..."
cat > configure.h << EOF
/******************************************************************************

Defines used to connect to MySQL database server

WARNING!!! This file is generated. Do not edit!

******************************************************************************/

#ifndef _CONFIGURE_H
#define _CONFIGURE_H

#define MAX_TRIES 5
#define ETC_DIR "$ETC_DIR"

#endif
EOF
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK

exit 0
