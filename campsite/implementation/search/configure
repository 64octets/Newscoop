#!/bin/bash

. ../../make.env

echo -n -e "\t\tWriting configure.h header..."
cat > configure.h << EOF
/******************************************************************************

Defines the configuration directory

WARNING!!! This file is generated. Do not edit!

******************************************************************************/

#ifndef _CONFIGURE_H
#define _CONFIGURE_H

#define ETC_DIR "$ETC_DIR"

#endif
EOF
[ $? -ne 0 ] && echo "ERROR" && exit 1
echo OK

exit 0
